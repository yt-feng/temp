.arrow {
  width: 40rpx;
  height: 40rpx;
  border-top: 8rpx solid #999;
  border-right: 8rpx solid #999;
  /* 旋转45度 */
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  /* 调整位置 */
  position: absolute;
  top: 30rpx;
  right: 50rpx;
}
.myavatar {
  border-radius: 50%;
  overflow: hidden;
}
@-webkit-keyframes rainbow {
0% {
      color: #efc68f;
}
100% {

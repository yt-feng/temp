.im{
  position: relative;
  left: 0;
  width: 64px; /*微信头像大小*/
  height: 64px;
  border-radius: 8%; /*圆角*/
  border: 2px solid #fff; /*白色包边*/
  margin-bottom: 10px; /*为了文字距离图片有一定距离*/
}

.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.info_img{

  opacity: 0.5;
  width: 100%;

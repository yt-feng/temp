<view style="height: 100%">
  <view style="position: absolute;top: 0rpx;left: 0rpx;opacity: 0.7;background-color: black;width: 100%;height: 100%;z-index: -1;">
  </view>
		<image class="background" style="z-index: -999;"
			src="{{url[1]}}">
		</image>
		<view
			style="font-size: 60rpx; font-family: Helvetica, sans-serif;font-weight: bold;color: #ffffff;text-align: center;margin-top: 5%;margin-bottom: -5%;">
			选择角色</view>

		<view class="box">
			<view wx:for="{{list}}"  id="card_{{index}}">
				<view bindtap="select" data-index="{{index + 1}}">
					<view style="position:relative;height: 200rpx;width: 220rpx;">
            <image src="{{mel[(index)]}}" style="width: 180rpx; height: 180rpx;left:0rpx;bottom: 0rpx;z-index: 1;position: absolute;" ></image>
            <image src="{{mel2[(index)]}}" style="width: 180rpx; height: 180rpx;left:0rpx;bottom: 0rpx; z-index: 2;position: absolute;" wx-if="{{me==(index+1)}}"></image>
					</view>

				</view>
			</view>
		</view>
		<view class="m-box">
			<image src="{{meim[(me-1)]}}" style="width:  600rpx;height: 600rpx; z-index: 0;align-self: center;">
			</image>
      <view
					style="font-size: 60rpx;margin-bottom: 5%; font-family: Helvetica, sans-serif;font-weight: bold;color: #ffffff;margin-top: -5%;">
					{{list[(me-1)]}}
				</view>
			<!-- <image bindtap="start" style="width: 30%;height: 13%;bottom: 5%;"
				src="{{url[4]}}">
			</image> -->
      <view style="width: 80%;">
        <button type="default" style="border-radius: 9999px;height: 110rpx;line-height: 110rpx;bottom: 5%;font-family: Helveticasans-serif;font-weight: bold;color: #000;background-color: gold;" bindtap="start">确定</button>
      </view>
		</view>

	</view>
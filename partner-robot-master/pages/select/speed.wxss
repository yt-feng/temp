/* pages/select/speed.wxss */
.button-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  height: 10%;
  font-size: 36px;
  font-weight: bold;
  color: rgb(255, 255, 255);
  margin-top: 20px;
  margin-bottom: 10px;
  z-index: -1;
  text-align: center;
  color: rgb(211, 211, 211);
   font-size: 16px;
   font-weight: bold;
}

.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.container {
  height: 200%vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.button {
  margin: 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  height: 15%;
}
button{
  opacity: 0.8;
  position: absolute;
  background-color: #4270c5;
  color: #fff;
  font-size: 24px;
  width: 80%;
  text-align: center;
}

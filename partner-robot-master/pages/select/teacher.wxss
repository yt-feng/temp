.title {
  height: 10%;
  font-size: 24px;
  font-weight: bold;
  color: rgb(255, 255, 255);
  margin-top: 20px;
  margin-bottom: 10px;
  z-index: -1;
}

.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.container {
  height: 100%vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  height: 30%;
}


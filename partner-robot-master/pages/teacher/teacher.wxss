.item {
  border-left: 1px solid #bbbbbb;
  border-top: 1px solid #33b8ec;
  border-right: 3px solid rgb(221, 221, 221);
  border-bottom: 3px solid rgb(134, 134, 134);
  border-radius: 30rpx;
}
.item_selected {
  border-right: 1px solid #bbbbbb;
  border-bottom: 1px solid #33b8ec;
  border-left: 3px solid rgb(221, 221, 221);
  border-top: 3px solid rgb(134, 134, 134);
  border-radius: 30rpx;
}


